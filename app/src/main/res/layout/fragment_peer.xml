<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/rounded_red_border"
    android:stretchColumns="0"
    tools:context=".PeerFragment">

    <TableRow
        android:layout_width="206dp"
        android:layout_height="73dp"
        android:layout_margin="3dp">

        <TextView
            android:id="@+id/peer_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:gravity="center|top|center_vertical|fill_vertical"
            android:text="@string/peer_name" />

        <TextView
            android:id="@+id/peer_rssi"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:gravity="right"
            android:text="@string/peer_rssi"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textSize="12sp" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp">

        <TextView
            android:id="@+id/peer_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="2"
            android:text="@string/peer_address" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp">

        <Switch
            android:id="@+id/switch_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="2"
            android:text="@string/switch_play" />

    </TableRow>

</TableLayout>